{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "run-p start:server-app:dev start:client-app:dev",
    "start:client-app:dev": "npm run start:dev --prefix client-app",
    "start:server-app:dev": "npm run start:dev --prefix server-app",
    "start:prod": "cross-env NODE_ENV=prod-local run-s build:client-app:prod start:server-app:prod",
    "build:client-app:prod": "npm run build --prefix client-app",
    "start:server-app:prod": "npm run start --prefix server-app",
    "build": "run-s install:server-app install:client-app build:client-app",
    "install:server-app": "npm ci --prefix server-app",
    "install:client-app": "npm ci --prefix client-app",
    "build:client-app": "npm run build --prefix client-app",
    "start": "cross-env NODE_ENV=production npm run start:server-app",
    "start:server-app": "npm run start --prefix server-app"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "cross-env": "^7.0.2"
  }
}
