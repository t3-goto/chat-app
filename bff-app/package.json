{
  "name": "bff-app",
  "version": "1.0.0",
  "description": "Api server boilerplate with Node.js and TypeScript",
  "main": "app.ts",
  "scripts": {
    "build": "tsc",
    "start": "yarn run build && cross-env NODE_PATH=./app && cross-env NODE_ENV=production node app/app.js",
    "start:dev": "cross-env NODE_PATH=./app && cross-env NODE_ENV=development ts-node-dev src/app.ts",
    "watch": "tsc -b --watch",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:check": "tslint-config-prettier-check ./tslint.json",
    "secret": "yarn run build && cross-env NODE_PATH=./app node app/scripts/createSecretKeyBase.js"
  },
  "author": "Teruki Goto",
  "license": "ISC",
  "dependencies": {
    "@types/mongodb": "^3.5.20",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "crypt": "0.0.2",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "mongodb": "^3.5.8",
    "mongoose": "^5.9.16",
    "morgan": "^1.10.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cryptojs": "^3.1.29",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.47",
    "@types/http-errors": "^1.6.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.7.21",
    "@types/morgan": "^1.9.0",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.2",
    "prettier": "2.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.0",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.9.3"
  }
}
